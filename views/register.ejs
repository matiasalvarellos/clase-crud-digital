<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <title>Register</title>
  </head>
  <body>
    <%- include("partials/header") %>
    <main>
      <div class="container">

        <form action="/users/register" enctype="multipart/form-data" autocomplete="off" method="POST">

          <div class="mb-3">  
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" autocomplete="off" name="email" id="email" aria-describedby="emailHelp">
          </div>

          <div class="mb-3">
            <label for="name" class="form-label">Nombre</label>
            <input type="text" class="form-control" autocomplete="off" name="name" id="name">
          </div>

          <div class="mb-3">
            <label for="last_name" class="form-label">Apellido</label>
            <input type="text" class="form-control" autocomplete="off" name="last_name" id="last_name">
          </div>
          
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" autocomplete="off" name="password" id="password">
          </div>

          <div class="mb-3">
            <label for="avatar" class="form-label"> Avatar</label>
            <input type="file" class="form-control" id="avatar" name="avatar">
          </div>

          <div class="mb-3">
            <button type="submit" class="btn btn-primary">
              Registrate!
            </button>
          </div>

        </form>

        <% if( locals.errors ){ %>
          <ul>
            <% errors.forEach(error => { %>
              <li> <%= error.msg %> </li>
            <% }) %>
          </ul>
        <% } %>

      </div>
    </main>
    <%- include("partials/footer") %> 
  </body>
</html>