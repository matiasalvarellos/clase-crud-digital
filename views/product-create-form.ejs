<!DOCTYPE html>
<html lang="en">
  <head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Create</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">

    <link rel="stylesheet" href="/stylesheets/formProducts.css">

  </head>
  <body>

    <!-- incluimos el header -->

    <%- include("partials/header.ejs") %> 

    <!-- -->

    <h1>Crear auto:</h1>

    <main >
      <div class="form-container">

        <form action="/products/create" enctype="multipart/form-data" method="POST">

          <h3>Agregar imagen</h3>

          <div class="field-wrap">
            <input type="file" name="image">
          </div>

          <div class="field-wrap">
            <label for="marca">Marca:</label>
            <input type="text" value="<%= typeof old != "undefined" ? old.mark : "" %>" name="mark" id="marca">
          </div>

          <div class="field-wrap" >
            <label for="modelo">Modelo:</label>
            <input type="text" value="<%= typeof old != "undefined" ? old.model : "" %>" name="model" id="modelo">
          </div>
  
          <div class="field-wrap">
            <label for="precio">Precio:</label>
            <input type="number" value="<%= typeof old != "undefined" ? old.price : "" %>" name="price" id="precio">
          </div>
  
          <div>

            <p>Color del auto:</p>
             
            <div>
              <input type="radio" id="rj" value="red" name="color">
              <label for="rj">Rojo</label> 
            </div>
            <div>
              <input type="radio" id="gs" value="gray" name="color">
              <label for="gs">Gris</label>
            </div>
            <div>
              <input type="radio" id="ng" value="negro" name="color">
              <label for="ng">Negro</label>
            </div>
            <div>
              <input type="radio" id="wt" value="white" name="color">
              <label for="ng">white</label>
            </div>  
          </div>

          <div class="field-wrap">
            <button type="submit">
              Crear producto
            </button>
          </div>
        </form>
        
      </div>

      <%if(typeof errors != "undefined"){ %>
        <ul>

          <% errors.forEach(function(elem){ %>
            <li> <%= elem.msg %> </li>
          <% }) %> 

        </ul>
      <% } %> 

    </main>

    <!-- incluimos el footer  -->

    <%- include("partials/footer.ejs") %>

    <!---->

  </body>
</html>